<Window x:Class="TicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToe"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <Grid Background="#FFC08080">
        

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            
           
        </Grid.ColumnDefinitions>
      


        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>

        </Grid.RowDefinitions>

        
        
        <Button Grid.Row="0" Grid.Column="0" Click="cell_Click"> <Image x:Name="Row0Col0" Source="Images/blank_image.png" Stretch="Fill"/></Button>
        <Button Grid.Row="0" Grid.Column="1" Click="cell_Click"> <Image x:Name="Row0Col1" Source="Images/blank_image.png" Stretch="Fill"/></Button>
        <Button Grid.Row="0" Grid.Column="2" Click="cell_Click"> <Image x:Name="Row0Col2" Source="Images/blank_image.png" Stretch="Fill"/></Button>
        <Button Grid.Row="1" Grid.Column="0" Click="cell_Click"> <Image x:Name="Row1Col0" Source="Images/blank_image.png" Stretch="Fill"/></Button>
        <Button Grid.Row="1" Grid.Column="1" Click="cell_Click"> <Image x:Name="Row1Col1" Source="Images/blank_image.png" Stretch="Fill"/></Button>
        <Button Grid.Row="1" Grid.Column="2" Click="cell_Click"> <Image x:Name="Row1Col2" Source="Images/blank_image.png" Stretch="Fill"/></Button>
        <Button Grid.Row="2" Grid.Column="0" Click="cell_Click"> <Image x:Name="Row2Col0" Source="Images/blank_image.png" Stretch="Fill"/></Button>
        <Button Grid.Row="2" Grid.Column="1" Click="cell_Click"> <Image x:Name="Row2Col1" Source="Images/blank_image.png" Stretch="Fill"/></Button>
        <Button Grid.Row="2" Grid.Column="2" Click="cell_Click"> <Image x:Name="Row2Col2" Source="Images/blank_image.png" Stretch="Fill"/></Button>

       



        <StackPanel Grid.Row="3" Grid.ColumnSpan="3" Background="Transparent">
            <Label x:Name="GamesPlayedLabel" Content="Games Played: 0 Games Won: 0" />
            <Label x:Name="WinRatioLabel" Content="Win Ratio: 0%" />
            <Label x:Name="TurnLabel" Content="Turn: Player X" />
        </StackPanel>



    </Grid>
</Window>
