<Window x:Class="TicTacToe.SymbolsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToe"
        mc:Ignorable="d"
        Title="SymbolsWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Choose Your Symbol For The Game" FontSize="25" ></TextBlock>
            <TextBlock Text="Tic Tac Toe Game" HorizontalAlignment="Center" FontSize="15" Margin="0,0,0,20"></TextBlock>

            <Button  x:Name="XButton" Click="SymbolButton_Click">
            <Image Source="Images/tic-tac-toe_x.png" Width="40" /></Button>
            <Button  x:Name="OButton" Click="SymbolButton_Click">  
            <Image Source="Images/tic-tac-toe_o.png" Width="40" /></Button>
            
           
          
           
        </StackPanel>
    </Grid>
</Window>
